{
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "rootDir": "src",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "typeRoots": ["./src/@types", "./node_modules/@types"],
        "lib": ["es2018", "es2015", "dom"]
    }
}